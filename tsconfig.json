{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["DOM", "ES6", "ES2017", "ES2018"],
    "types": ["foundry-pc-types", "node"],
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
