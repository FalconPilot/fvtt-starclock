<header class="item-header flexcol centerh mgb">
  <img
    src="{{item.img}}"
    data-edit="img"
    title="{{item.name}}"
    class="pgv full-picture{{#if neon}} neon-{{neon}}{{/if}}"
  />
  <h1>
    <input
      type="text"
      name="name"
      value="{{item.name}}"
      class="pg"
      placeholder="{{ localize 'SCLK.ItemName' }}"
    />
  </h1>
</header>
