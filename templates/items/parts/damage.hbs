<div class="flexrow item-damage centerv">
  <strong>{{localize "SCLK.Damage"}}</strong>
  <input
    type="text"
    name="data.hits"
    value="{{data.data.hits}}"
    class="mgh"
    data-dtype="Number"
  />
  <strong>x</strong>
  <input
    type="text"
    name="data.wounds"
    value="{{data.data.wounds}}"
    class="mgh"
    data-dtype="Number"
  />
  <strong>P</strong>
  <input
    type="text"
    name="data.pierce"
    value="{{data.data.pierce}}"
    class="mgh"
    data-dtype="Number"
  />
  <select
    name="data.woundType"
    class="line-input mgv"
    data-type="string"
  >
    {{#select data.data.woundType}}
      {{#each config.woundTypes as |name type|}}
        <option value="{{type}}">{{localize name}}</option>
      {{/each}}
    {{/select}}
  </select>
</div>