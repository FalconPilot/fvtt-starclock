{{#if @root/owner}}
  <div class="item-controls flexcol pgh">
    {{#if isStash}}
      <a
        class="item-control item-unstash flexrow centerv centerh"
        title="{{localize "SCLK.ActionUnstash"}}"
        data-id="{{item._id}}"
      >
        <i class="fas fa-vault"></i>
      </a>
    {{else}}
      <a
        class="item-control item-stash flexrow centerv centerh"
        title="{{localize "SCLK.ActionStash"}}"
        data-id="{{item._id}}"
      >
        <i class="fas fa-backpack"></i>
      </a>
    {{/if}}
    <a
      class="item-control item-delete flexrow centerv centerh"
      title="{{localize "SCLK.Delete"}}"
      data-id="{{item._id}}"
    >
      <i class="fas fa-trash"></i>
    </a>
  </div>
{{/if}}