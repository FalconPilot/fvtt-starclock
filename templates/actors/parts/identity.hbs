<div class="character-identity flexcol pg mgb neon-pink-pseudo gap">
  <div class="flexrow bottomv pgh">
    {{localize "SCLK.MyNameIs"}}
    <input
      type="text"
      class="line-input mgl neon-white"
      name="name"
      value="{{@root/actor.name}}"
    />
  </div>
  <div class="flexrow bottomv pgh">
    {{localize "SCLK.RaceLabel"}}
    <select
      name="system.race"
      class="line-input mgh neon-white"
    >
      {{#select @root/actor.system.race}}
        {{#each @root/config.races as |name race|}}
          <option value="{{race}}">{{localize name}}</option>
        {{/each}}
      {{/select}}
    </select>
    {{localize "SCLK.BodyTypeLabel"}}
    <select
      name="system.bodyType"
      class="line-input mgl neon-white"
    >
      {{#select @root/actor.system.bodyType}}
        {{#each @root/config.bodyTypes as |name type|}}
          <option value="{{type}}">{{localize name}}</option>
        {{/each}}
      {{/select}}
    </select>
  </div>
  <div class="flexrow bottomv pgh">
    {{localize "SCLK.AgeLabel"}}
    <input
      type="number"
      class="line-input mgh neon-white"
      name="system.age"
      value="{{@root/actor.system.age}}"
    />
    {{localize "SCLK.HeightLabel"}}
    <input
      type="number"
      class="line-input mgl neon-white"
      name="system.heightMeters"
      value="{{@root/actor.system.heightMeters}}"
    />
    <span class="line-input pgh neon-white">m</span>
    <input
      type="number"
      class="line-input neon-white"
      name="system.heightCentimeters"
      min="0"
      max="99"
      value="{{@root/actor.system.heightCentimeters}}"
    />
    <span class="line-input pgl neon-white mgr">cm</span>
    {{localize "SCLK.HeightLabel2"}}
  </div>
</div>
<div class="flexrow attributes-list gap">
  {{#each @root/config.attributes as |name key|}}
    <label class="character-attribute flexcol">
      <h4 class="mgb">{{localize name}}</h4>
      <div class="flexcol attribute-value">
        <input
          type="number"
          name="system.{{key}}"
          value="{{getKey @root/actor.system key}}"
          min="0"
          max="4"
          data-dtype="Number"
        />
      </div>
    </label>
  {{/each}}
</div>
