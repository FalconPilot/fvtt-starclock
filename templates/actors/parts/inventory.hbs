  {{#if (hasElements @root/inventory)}}
      {{#each @root/inventory as |items sid|}}
        <h2 class="neon-pink-pseudo">{{ localize sid }}</h2>
        <ol class="item-list">
        {{#each items as |item iid|}}
          <li class="item flexrow inventory-item mgv" draggable="true">
            <div class="inv-item-mini neon-pink pg">
              <img src="{{item.img}}" draggable="false" />
            </div>
            <div class="flexcol pg topv">
              <div class="flexrow">
                <h3 class="inv-item-name">{{item.name}}</h3>
              </div>
              {{~#if item.hasDamage}}
                <div class="flexrow item-damage centerv">
                  <strong>{{item.data.hits}}x{{item.data.wounds}}P{{item.data.pierce}} {{localize (woundTypeLoc item.data.woundType)}}</strong>
                </div>
              {{/if}}
            </div>
            {{#if @root/owner}}
              <div class="item-controls flexcol pg">
                <a
                  class="item-control item-edit"
                  title="{{localize "SCLK.Edit"}}"
                  data-id="{{item._id}}"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <a
                  class="item-control item-delete"
                  title="{{localize "SCLK.Delete"}}"
                  data-id="{{item._id}}"
                >
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            {{/if}}
          </li>
        {{/each}}
      </ol>
    {{/each}}
  {{else}}
    <h2 class="neon-pink-pseudo">{{localize "SCLK.EmptyInventory"}}</h2>
  {{/if}}
</ol>
