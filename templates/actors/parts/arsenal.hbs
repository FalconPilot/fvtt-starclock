{{#if (hasElements @root/weapons)}}
  {{#each @root/weapons as |items sid|}}
    <h2 class="neon-pink-pseudo">{{ localize sid }}</h2>
    <ol class="item-list gap">
      {{#each items as |item iid|}}
        <li class="item flexrow inventory-item mgv" draggable="true">
          <div class="inv-item-mini neon-pink">
            <img src="{{item.img}}" draggable="false" />
          </div>
          <div class="flexcol topv">
            <div class="flexrow">
              <h3 class="inv-item-name">{{item.name}}</h3>
            </div>
            <div class="flexrow item-damage centerv">
              <strong>{{item.system.damage}}P{{item.system.pierce}}</strong>
            </div>
          </div>
          {{#if @root/owner}}
            <div class="item-controls flexcol">
              <a
                class="item-control item-edit"
                title="{{localize "SCLK.Edit"}}"
                data-id="{{item._id}}"
              >
                <i class="fas fa-edit"></i>
              </a>
              <a
                class="item-control item-delete"
                title="{{localize "SCLK.Delete"}}"
                data-id="{{item._id}}"
              >
                <i class="fas fa-trash"></i>
              </a>
            </div>
          {{/if}}
        </li>
      {{/each}}
    </ol>
  {{/each}}
{{else}}
  <h2 class="neon-pink-pseudo">{{localize "SCLK.EmptyArsenal"}}</h2>
{{/if}}
